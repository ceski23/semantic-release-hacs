{
	"name": "@ceski23/semantic-release-hacs",
	"description": "Semantic Release plugin for HACS",
	"version": "1.0.0",
	"author": "Cezary Bober",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ceski23/semantic-release-hacs.git"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepare": "husky",
		"build": "tsdown",
		"check:config": "attw --pack . --profile esm-only && publint",
		"test": "bun test",
		"lint": "dprint check",
		"lint:fix": "dprint fmt",
		"prepublishOnly": "bun install && bun run build"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@types/archiver": "^6.0.3",
		"@types/semantic-release__error": "^3.0.3",
		"@types/signale": "^1.4.7",
		"husky": "^9.1.7",
		"publint": "^0.3.12",
		"semantic-release": "^24.2.8",
		"tsdown": "^0.15.1",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@semantic-release/error": "^4.0.0",
		"archiver": "^7.0.1",
		"fs.promises.exists": "^1.1.4",
		"zod": "^4.1.8"
	}
}
